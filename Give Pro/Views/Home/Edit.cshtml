@model Give_Pro.Models.ApplyForJob

@{
    ViewBag.Title = "التعديل";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>تعديل بيانات الوظائف التي تم التقدم إليها من طرفكم لها</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.JobsId)
    @Html.HiddenFor(model => model.UserId)


    <div class="form-group">
        @Html.LabelFor(model => model.JobsId, "أسم الوظيفه", htmlAttributes: new { @class = "control-label col-md-2", @style = " text-align:right" })
        <div class="col-md-10">
            @Model.Jobs.JobName
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserId, "أسم المستخدم", htmlAttributes: new { @class = "control-label col-md-2", @style = " text-align:right" })
        <div class="col-md-10">
            @Model.User.UserName
        </div>
    </div>
    <div class="row" style="width:100%; height:25px"></div>
    <div class="form-group">
        @Html.LabelFor(model => model.Message, "الرساله", htmlAttributes: new { @class = "control-label col-md-2", @style = "padding-top:15px; text-align:right" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Message, "الرساله", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row" style="width:100%; height:25px"></div>
    <div class="form-group">
        @Html.LabelFor(model => model.ApplyDate, "تاريخ الإرسال", htmlAttributes: new { @class = "control-label col-md-2", @style = " text-align:right" })
        <div class="col-md-10">
            @Model.ApplyDate
        </div>
    </div>
    <div class="row"style="width:100%; height:25px"></div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="حفظ التعديلات" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div class="row" style="margin-right:30px">
    @Html.ActionLink("العوده إلي القائمه", "Index")
</div>
